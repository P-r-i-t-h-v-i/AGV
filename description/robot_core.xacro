<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

  <!-- ===== INCLUDE INERTIAL MACROS ===== -->
  <xacro:include filename="inertial_macros.xacro"/>

  <!-- ===== MATERIALS ===== -->
  <material name="black"><color rgba="0 0 0 1"/></material>
  <material name="blue"><color rgba="0 0 1 1"/></material>
  <material name="gray"><color rgba="0.6 0.6 0.6 1"/></material>
  <material name="pink"><color rgba="1 0.4 0.7 1"/></material>


  <!-- ================= BASE ================= -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.055"/>
      <geometry>
        <box size="0.25 0.18 0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.055"/>
      <geometry>
        <box size="0.25 0.18 0.05"/>
      </geometry>
    </collision>

    <xacro:inertial_box mass="3.0" x="0.25" y="0.18" z="0.05"/>
  </link>

  <!-- ================= LEFT WHEEL ================= -->
  <link name="left_wheel">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>

    <xacro:inertial_cylinder mass="0.3" r="0.03" h="0.02"/>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.04 0.09 0.03"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ================= RIGHT WHEEL ================= -->
  <link name="right_wheel">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>

    <xacro:inertial_cylinder mass="0.3" r="0.03" h="0.02"/>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.04 -0.09 0.03"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ================= CASTER ================= -->
  <link name="caster_wheel">
    <visual>
      <geometry><sphere radius="0.02"/></geometry>
      <material name="black"/>
    </visual>

    <collision>
      <geometry><sphere radius="0.02"/></geometry>
      <material name="black"/>
    </collision>

    <xacro:inertial_sphere mass="0.1" r="0.02"/>
  </link>

  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="0.11 0 0.02"/>
  </joint>

  <!-- ================= ULTRASONIC SENSORS ================= -->
  <link name="ultrasonic_front">
    <visual><geometry><box size="0.04 0.02 0.02"/></geometry><material name="pink" ></material></visual>
    <collision><geometry><box size="0.04 0.02 0.02"/></geometry><material name="pink" ></material></collision>
    <xacro:inertial_box mass="0.05" x="0.04" y="0.02" z="0.02"/>
  </link>

  <joint name="ultrasonic_front_joint" type="fixed">
    <parent link="base_link"/>
    <child link="ultrasonic_front"/>
    <origin xyz="0.13 0 0.10"/>
  </joint>

</robot>
